<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingTop="36dp"
    android:paddingEnd="20dp"
    android:paddingBottom="16dp"
    android:showDividers="middle">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        tools:background="#CCC"
        tools:src="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/companyNameText"
        style="@style/AppTextAppearance.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/textLight"
        android:visibility="gone"
        tools:text="Company name" />

    <TextView
        android:id="@+id/jobTitleText"
        style="@style/AppTextAppearance.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textStyle="bold"
        app:fontFamily="@font/product_sans"
        tools:text="Job title" />

    <Button
        android:id="@+id/applyButton"
        style="@style/AppTextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="@font/product_sans"
        android:text="@string/apply_now"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/darkGrey" />

    <TextView
        android:id="@+id/jobTypeText"
        style="@style/AppTextAppearance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_outline_business_black_18dp"
        android:drawablePadding="10dp"
        android:textColor="@color/text"
        app:fontFamily="@font/product_sans"
        tools:text="Job type" />

    <TextView
        android:id="@+id/locationText"
        style="@style/AppTextAppearance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/ic_outline_place_black_18dp"
        android:drawablePadding="10dp"
        android:textColor="@color/text"
        app:fontFamily="@font/product_sans"
        tools:text="Job location 1 / location 2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/darkGrey" />

    <TextView
        android:id="@+id/descriptionText"
        style="@style/AppTextAppearance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        tools:text="Job description rich text" />

</LinearLayout>

